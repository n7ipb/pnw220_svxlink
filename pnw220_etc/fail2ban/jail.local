[DEFAULT]
usedns = yes
#
# Don't lock out localhost mistakes or the pnw220.wetnet.net server
ignoreip = 127.0.0.1/8 35.164.103.21
#
# "bantime" is the number of seconds that a host is banned.
bantime  = 604800

# A host is banned if it has generated "maxretry" during the last "findtime"
# seconds.
findtime  = 86400

# "maxretry" is the number of failures before a host get banned.
maxretry = 3

backend = systemd

[sshd]
enabled=true
